<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/dl_back_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <com.example.mtiktok.widget.MyVideoPlayer
                android:id="@+id/txv_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <com.yqw.hotheart.HeartFrameLayout
                    android:id="@+id/heart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:heart_degrees_interval_max="20"
                    app:heart_degrees_interval_min="-20"
                    app:heart_swipe_image="@drawable/ic_heart"
                    />
            </com.example.mtiktok.widget.MyVideoPlayer>


        <RelativeLayout
            android:id="@+id/rl_back_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="-65dp"
            android:background="#fd5031" />
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>
